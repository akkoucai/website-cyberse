---
import { t, changeLanguage } from 'i18next';
import { Trans, LanguageSelector } from 'astro-i18next/components';
---

<div class="mb-10 md:py-3 sm:px-6 mx-auto md:px-24 lg:px-8">
	<div class="grid grid-cols-2 row-gap-8 md:grid-cols-4">
		<div class="text-center md:border-r dark:md:border-slate-500 mb-10 md:mb-0">
			<div class="text-4xl font-bold lg:text-5xl xl:text-6xl text-primary-500 font-heading">5 +</div>
			<p class="text-sm font-medium tracking-widest text-gray-800 dark:text-slate-400 uppercase lg:text-base">
				{t('stats.audits')}
			</p>
		</div>
		<div class="text-center md:border-r dark:md:border-slate-500 mb-10 md:mb-0">
			<div class="text-4xl font-bold lg:text-5xl xl:text-6xl text-primary-500 font-heading">10 +</div>
			<p class="text-sm font-medium tracking-widest text-gray-800 dark:text-slate-400 uppercase lg:text-base">
				{t('stats.dapp')}
			</p>
		</div>
		<div class="text-center md:border-r dark:md:border-slate-500 font-heading">
			<div class="text-4xl font-bold lg:text-5xl xl:text-6xl text-primary-500">15 +</div>
			<p class="text-sm font-medium tracking-widest text-gray-800 dark:text-slate-400 uppercase lg:text-base">
				{t('stats.consulting')}
			</p>
		</div>
		<div class="text-center">
			<div class="text-4xl font-bold lg:text-5xl xl:text-6xl text-primary-500 font-heading">50 +</div>
			<p class="text-sm font-medium tracking-widest text-gray-800 dark:text-slate-400 uppercase lg:text-base">
				{t('stats.clients')}
			</p>
		</div>
	</div>
	<div class="md:flex md:justify-center md:items-center" id="services">
		<div class="hidden md:border-b-2 md:border-b-gray-500 dark:border-b-slate-500 w-full"></div>
	</div>
</div>
