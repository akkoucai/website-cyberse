---
import { Icon } from 'astro-icon';
import Picture from '~/components/core/Picture.astro';
---

<section>
	<div class="max-w-7xl mx-auto px-4 pb-3 sm:px-6">
		<div class="py-12 md:py-20 flex">
			<div class="text-left pb-10 max-w-4xl md:pb-16">
				<h1 class="text-5xl md:text-[3.50rem] font-bold leading-tighter tracking-tighter mb-4 font-heading">
					Turn your idea into a
					<span
						class="bg-clip-text text-transparent bg-gradient-to-r from-primary-500 to-secondary-500 sm:whitespace-nowrap"
						>powerful & scalable</span
					>
					dApp.
				</h1>
				<div class="max-w-3xl">
					<p class="text-xl text-gray-600 mb-8 dark:text-slate-400">
						Cyberse provides our team of blockchain experts to guide you throughout your Web3 journey
						<span
							class="bg-clip-text text-transparent bg-gradient-to-r from-primary-500 to-secondary-500 sm:whitespace-nowrap"
						>
							from acculturation to production, with a special focus on security.
						</span>
					</p>
					<div class="max-w-none flex flex-nowrap flex-col sm:flex-row sm:justify-left gap-4">
						<div class="flex w-full sm:w-auto">
							<a
								class="btn text-white bg-gradient-to-r border border-primary-200 from-primary-500 to-secondary-500 hover:from-primary-500 hover:to-primary-500 sm:mb-0"
								href="https://github.com/onwidget/astrowind"
								target="_blank"
								rel="noopener"
							>
								<Icon name="tabler:download" class="w-5 h-5 mr-1 -ml-1.5" /> Let's discuss
							</a>
						</div>
						<div class="flex w-full sm:w-auto">
							<a
								class="btn text-white bg-gray-900 hover:bg-gray-700 dark:bg-gray-700 dark:hover:bg-gray-800 w-full"
								href="#features"
							>
								Looking for an Audit ?
							</a>
						</div>
					</div>
				</div>
			</div>
			<div>
				<div class="mb-8 m-auto h-full">
					<Picture
						src={import('~/assets/images/eth_illustration.png')}
						widths={[400, 768]}
						sizes=" (max-width: 767px) 400px, 768px"
						alt="Hero Image"
						aspectRatio="16:9"
					/>
				</div>
			</div>
		</div>
	</div>
</section>
